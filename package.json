{
  "name": "quick-snippet-inserter",
  "displayName": "Quick Snippet Inserter",
  "description": "Inserta rápidamente snippets de código desde plantillas predefinidas",
  "version": "0.1.0",
  "publisher": "tu-nombre-publisher",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "keywords": [
    "snippets",
    "templates",
    "productivity",
    "code-generation"
  ],
  "activationEvents": [
    "onCommand:quickSnippet.insertSnippet",
    "onCommand:quickSnippet.listSnippets", 
    "onCommand:quickSnippet.insertConsoleLog",
    "onCommand:quickSnippet.openSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quickSnippet.insertSnippet",
        "title": "Insertar Snippet Rápido",
        "category": "Quick Snippet",
        "icon": "$(symbol-snippet)"
      },
      {
        "command": "quickSnippet.listSnippets",
        "title": "Ver Lista de Snippets",
        "category": "Quick Snippet",
        "icon": "$(list-unordered)"
      },
      {
        "command": "quickSnippet.insertConsoleLog",
        "title": "Insertar console.log",
        "category": "Quick Snippet",
        "icon": "$(debug-console)"
      },
      {
        "command": "quickSnippet.openSettings",
        "title": "Abrir Configuración",
        "category": "Quick Snippet",
        "icon": "$(settings)"
      }
    ],
    "keybindings": [
      {
        "command": "quickSnippet.insertSnippet",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "quickSnippet.insertConsoleLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "quickSnippet.listSnippets",
        "key": "ctrl+shift+alt+s",
        "mac": "cmd+shift+alt+s"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quickSnippet.insertSnippet",
          "when": "editorTextFocus",
          "group": "1_modification"
        },
        {
          "command": "quickSnippet.insertConsoleLog",
          "when": "editorTextFocus && resourceExtname =~ /\\.(js|ts|jsx|tsx)$/",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "quickSnippet.insertSnippet"
        },
        {
          "command": "quickSnippet.listSnippets"
        },
        {
          "command": "quickSnippet.insertConsoleLog"
        },
        {
          "command": "quickSnippet.openSettings"
        }
      ]
    },
    "configuration": {
      "title": "Quick Snippet Inserter",
      "properties": {
        "quickSnippet.enableWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar mensaje de bienvenida al activar la extensión"
        },
        "quickSnippet.defaultLanguage": {
          "type": "string",
          "default": "javascript",
          "description": "Lenguaje por defecto para snippets",
          "enum": ["javascript", "typescript", "python", "java", "csharp", "other"]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/quick-snippet-inserter.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/quick-snippet-inserter/issues"
  },
  "homepage": "https://github.com/tu-usuario/quick-snippet-inserter#readme",
  "license": "MIT"
} 